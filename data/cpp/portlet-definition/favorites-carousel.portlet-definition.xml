          <script src="/resource-server/webjars/cpp__content-carousel/dist/content-carousel.min.js" defer></script>
          <content-carousel
              type="portlet"
              source="/uPortal/api/v4-3/dlm/portletRegistry.json?favorite=true"
              slick-options='{"slidesToShow":6,"slidesToScroll":6,"infinite":true,"arrows":true,"prevArrow":"<button class=\"arrow prev-arrow\"><span aria-hidden=\"true\">&#x2190;</span><span class=\"sr-only\">Previous</span></button>","nextArrow":"<button class=\"arrow next-arrow\"><span aria-hidden=\"true\">&#x2192;</span><span class=\"sr-only\">Next</span></button>","responsive":[{"breakpoint":993,"settings":{"slidesToShow":4,"slidesToScroll":4}},{"breakpoint":769,"settings":{"slidesToShow":3,"slidesToScroll":3}}]}'
          />
            <div slot="header">
              <style>
              :root {
                --cc-slick-item-height: auto;
              }

              @font-face {
                font-family: 'slick';
                font-weight: normal;
                font-style: normal;

                src: url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.eot');
                src: url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.eot?#iefix') format('embedded-opentype'), url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.woff') format('woff'), url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.ttf') format('truetype'), url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.svg#slick') format('svg');
              }

              .sr-only {
                position: absolute;
                width: 1px;
                height: 1px;
                padding: 0;
                margin: -1px;
                overflow: hidden;
                clip: rect(0,0,0,0);
                border: 0;
              }
              .arrow {
                background: none;
                border: 0;
                width: 20px;
                height: 20px;
                z-index: 2;
                padding: 0;
                position: absolute;
                top: 50%;
              }
              .arrow span {
                font-family: slick;
                font-size: 20px;
                color: #000;
                display: flex;
              }
              .prev-arrow {
                left: -10px;
              }
              .next-arrow {
                right: -13px;
              }
              .slick-prev {
                left: -10px;
              }

              .slick-next {
                right: -13px;
              }

              .slick-next::before, .slick-prev::before {
                color: #000;
              }

              .slick-item .slick-image {
                margin: 0px;
              }

              .slick-item .slick-image {
                height: auto !important;
              }

              @media only screen and (max-width: 479px) {
                .slick-item .slick-image {
                  min-height: 16rem;
                }
                .slick-item .slick-title {
                  font-size: 1rem;
                }
              }

              @media only screen and (min-width: 1200px) {
                .slick-item .slick-image {
                  min-height: 10rem;
                }
              }

              @media only screen and (min-width: 1440px) {
                .slick-item .slick-image {
                  min-height: 12rem;
                }
              }

              @media only screen and (min-width: 1920px) {
                .slick-item .slick-image {
                  min-height: 16rem;
                }
              }
            </style>
