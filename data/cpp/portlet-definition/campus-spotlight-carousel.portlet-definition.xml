        <value>/uPortal/media/skins/icons/mobile/bullhorn.png</value>
    </parameter>
    <parameter>
        <name>printable</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>showChrome</name>
        <value>false</value>
