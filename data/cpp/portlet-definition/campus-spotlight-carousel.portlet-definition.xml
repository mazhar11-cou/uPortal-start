        <readOnly>false</readOnly>
        <value>true</value>
    </portlet-preference>
    <portlet-preference>
        <name>content</name>
        <readOnly>false</readOnly>
        <value>
        <![CDATA[
        <script src="/resource-server/webjars/vue/dist/vue.min.js"></script>
        <script src="/resource-server/webjars/uportal__content-carousel/dist/content-carousel.min.js" defer></script>

        <content-carousel
            type="rss"
            source="/Announcements/getRssFeed?topic=476977"
            slick-options='{ "slidesToShow": 1, "infinite": true, "arrows": true, "autoplay": true }'
            fit-to-container="true">
            <div slot="header">
                <style type="text/css">
                    .slick-prev:before, .slick-next:before { color: #000; }
                    .slick-container.hero .slick-hero-text { width: initial !important; bottom: 20px !important; left: 15%; right: 15%; font-size: 1.5em; text-shadow: 1px 1px 3px #000 }
                </style>
            </div>
        </content-carousel>
        ]]>
        </value>
    </portlet-preference>
