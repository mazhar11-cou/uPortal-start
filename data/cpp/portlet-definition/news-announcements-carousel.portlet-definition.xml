<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<portlet-definition version="5.0" xsi:schemaLocation="https://source.jasig.org/schemas/uportal/io/portlet-definition https://source.jasig.org/schemas/uportal/io/portlet-definition/portlet-definition-5.0.xsd" xmlns="https://source.jasig.org/schemas/uportal/io/portlet-definition" xmlns:ns6="https://source.jasig.org/schemas/uportal/io/permission-owner" xmlns:ns5="https://source.jasig.org/schemas/uportal/io/subscribed-fragment" xmlns:ns8="https://source.jasig.org/schemas/uportal/io/user" xmlns:ns7="https://source.jasig.org/schemas/uportal/io/stylesheet-descriptor" xmlns:ns2="https://source.jasig.org/schemas/uportal" xmlns:ns4="https://source.jasig.org/schemas/uportal/io/event-aggregation" xmlns:ns3="https://source.jasig.org/schemas/uportal/io/portlet-type" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <title>News and Announcements</title>
    <name>News and Announcements Carousel</name>
    <fname>news-announcements-carousel</fname>
    <type>Advanced CMS</type>
    <timeout>5000</timeout>
    <portlet-descriptor>
        <ns2:webAppName>/SimpleContentPortlet</ns2:webAppName>
        <ns2:portletName>cms</ns2:portletName>
    </portlet-descriptor>
    <group>Authenticated Users</group>
    <parameter>
        <name>alternate</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>blockImpersonation</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>chromeStyle</name>
        <value>no-chrome</value>
    </parameter>
    <parameter>
        <name>configurable</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>disableDynamicTitle</name>
        <value>true</value>
    </parameter>
    <parameter>
        <name>disablePortletEvents</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>editable</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>hasAbout</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>hasHelp</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>hideFromMobile</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>highlight</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>iconUrl</name>
        <value>/ResourceServingWebapp/rs/tango/0.8.90/32x32/status/dialog-warning.png</value>
    </parameter>
    <parameter>
        <name>mobileIconUrl</name>
        <value>/uPortal/media/skins/icons/mobile/bullhorn.png</value>
    </parameter>
    <parameter>
        <name>printable</name>
        <value>false</value>
    </parameter>
    <parameter>
        <name>showChrome</name>
        <value>false</value>
    </parameter>
    <portlet-preference>
        <name>cleanContent</name>
        <readOnly>false</readOnly>
        <value>true</value>
    </portlet-preference>
    <portlet-preference>
        <name>content</name>
        <readOnly>false</readOnly>
        <value>
        <![CDATA[
        <style>.news-announcements-carousel .up-portlet-titlebar { display: none }</style>

        <script src="/resource-server/webjars/vue/dist/vue.min.js"></script>
        <script type="text/javascript" src="/resource-server/webjars/cpp__content-carousel/dist/content-carousel.min.js?v=1.30.1" defer></script>
        <content-carousel
            type="authenticated-rss"
            source="/feeds/api/v0/personalized-feed"
            slick-options='{ "slidesToShow": 6, "infinite": true, "arrows": true, "responsive":[{"breakpoint":993,"settings":{"slidesToShow":4}},{"breakpoint":769,"settings":{"slidesToShow":3}},{"breakpoint":481,"settings":{"slidesToShow":1}}] }'
        >
          <div slot="header">
            <style>
            :root {
              --cc-slick-item-height: auto;
            }

            @font-face {
                font-family: 'slick';
                font-weight: normal;
                font-style: normal;

                src: url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.eot');
                src: url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.eot?#iefix') format('embedded-opentype'), url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.woff') format('woff'), url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.ttf') format('truetype'), url('/resource-server/webjars/cpp__content-carousel/dist/fonts/slick.svg#slick') format('svg');
            }

            .slick-container > div > h3 {
              margin-top: 0px;
              margin-bottom: 0px;
            }

            .slick-prev {
              left: -10px;
            }

            .slick-next {
              right: -15px;
            }

            .slick-next::before, .slick-prev::before {
              color: #000;
            }

            .slick-item .slick-image {
              margin: 0px;
            }

            .slick-item.has-image .slick-image > img {
              height: auto;
            }

            @media only screen and (max-width: 479px) {
              .slick-item .slick-image {
                min-height: 16rem;
              }
            }

            @media only screen and (min-width: 1200px) {
              .slick-item .slick-image {
                min-height: 10rem;
              }
            }

            @media only screen and (min-width: 1440px) {
              .slick-item .slick-image {
                min-height: 12rem;
              }
            }

            @media only screen and (min-width: 1920px) {
              .slick-item .slick-image {
                min-height: 16rem;
              }
            }
            </style>
            <h3>News &amp; Announcements</h3>
          </div>
        </content-carousel>
        ]]>
        </value>
    </portlet-preference>
</portlet-definition>
